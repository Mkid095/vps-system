#!/bin/bash
# ============================================================================
# Maven Flow - ASCII Banner
# ============================================================================

# Display ASCII art banner with colors
show_flow_banner() {
    # Colors
    CYAN='\033[0;36m'
    GREEN='\033[0;32m'
    YELLOW='\033[1;33m'
    BLUE='\033[0;34m'
    RED='\033[0;31m'
    NC='\033[0m'

    cat << 'EOF'

'${CYAN}' __    __     ______     __   __   ______     __   __     ______        ______   __         ______     __     __'${NC}
'${CYAN}'/\ "-./  \   /\  __ \   /\ \ / /  /\  ___\   /\ "-.\ \   /\  ___\      /\  ___\ /\ \       /\  __ \   /\ \  _ \ \'${NC}
'${CYAN}'\ \ \-./\ \  \ \  __ \  \ \ \'"${RED}'\/'${CYAN}'   \ \  __\   \ \ \-.  \  \ \___  \     \ \  __\ \ \ \____  \ \ \/\ \  \ \ \/ ".\ \\'${NC}
'${CYAN}' \ \_\ \ \_\  \ \_\ \_\  \ \__|'${BLUE}'    '${CYAN}'\ \_____\  \ \_\\"'${YELLOW}'_\  \/\_____\     \ \_\    \ \_____\  \ \_____\  \ \__/".~\_\'${NC}
'${CYAN}'  \/_/  \/_/   \/_/\/_/   \/_/      \/_____/   \/_/ \/_/   \/_____/      \/_/     \/_____/   \/_____/   \/_/   \/_/'${NC}

EOF
}
