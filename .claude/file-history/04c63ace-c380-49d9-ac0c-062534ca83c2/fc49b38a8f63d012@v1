services:
  developer-portal:
    build: .
    container_name: nextmavens-developer-portal
    environment:
      - PORT=3000
    ports:
      - "3006:3000"
    restart: unless-stopped
    networks:
      - dokploy-network
    labels:
      - traefik.enable=true
      - traefik.http.routers.developer-portal.rule=Host(`portal.nextmavens.cloud`)
      - traefik.http.routers.developer-portal.entrypoints=websecure
      - traefik.http.routers.developer-portal.tls.certresolver=letsencrypt
      - traefik.http.services.developer-portal.loadbalancer.server.port=3000

networks:
  dokploy-network:
    external: true
