}

/* Transitions */
.fade-in {
  animation: fadeIn 0.15s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Hide elements visually but keep accessible */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
