import { useState, useEffect } from 'react';
import type { WhatsAppInstance } from '@/lib/api-vps/vps';

interface WhatsAppInstanceCardProps {
  instance: WhatsAppInstance;
  onDelete: (name: string) => void;
  onRefresh: () => void;
}

export function WhatsAppInstanceCard({ instance, onDelete, onRefresh }: WhatsAppInstanceCardProps) {
  const [qrCode, setQrCode] = useState<string>('');
  const [showQR, setShowQR] = useState(false);
  const [status, setStatus] = useState(instance.status);

  useEffect(() => {
    let interval: NodeJS.Timeout;

    if (status === 'connecting' || status === 'close') {
      // Fetch QR code and status
      const fetchQR = async () => {
        try {
          const response = await fetch(`/api/whatsapp/qr/${instance.name}`);
          const data = await response.json();
          if (data.qrCode && data.qrCode !== '') {
            setQrCode(data.qrCode);
            setShowQR(true);
          }

          // Also check status
          const statusResponse = await fetch(`/api/whatsapp/status/${instance.name}`);
          const statusData = await statusResponse.json();
          setStatus(statusData.state || 'close');
        } catch (error) {
          console.error('Failed to fetch QR/status:', error);
        }
      };

      fetchQR();
      interval = setInterval(fetchQR, 5000);
    }

    return () => {
      if (interval) clearInterval(interval);
    };
  }, [instance.name, status]);

  const statusConfig = {
    open: { label: 'Connected', classes: 'px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full', icon: '●' },
    close: { label: 'Disconnected', classes: 'px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-full', icon: '○' },
    connecting: { label: 'Connecting...', classes: 'px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-medium rounded-full', icon: '○' }
  };

  const config = statusConfig[status] || statusConfig.close;

  return (
    <div className="bg-white border border-gray-200 rounded-xl p-5">
      <div className="flex items-start justify-between mb-4">
        <div className="flex items-center gap-3">
          <div className="w-12 h-12 rounded-xl bg-green-100 flex items-center justify-center">
            <span className="text-2xl">✆</span>
          </div>
          <div>
            <h3 className="font-semibold text-gray-900 text-lg">{instance.name}</h3>
            <div className="flex items-center gap-2 mt-1">
              <span className={`${config.classes} flex items-center gap-1`}>
                <span className={status === 'open' ? 'animate-pulse' : ''}>{config.icon}</span>
                {config.label}
              </span>
            </div>
          </div>
        </div>

        <button
          onClick={() => {
            if (confirm(`Delete instance ${instance.name}?`)) {
              onDelete(instance.name);
            }
          }}
          className="p-2 hover:bg-red-50 rounded-lg transition-colors text-gray-400 hover:text-red-600"
        >
          ✕
        </button>
      </div>

      {showQR && qrCode ? (
        <div className="mb-4">
          <div className="bg-white p-4 rounded-lg border border-gray-200 inline-block">
            <img
              src={`data:image/png;base64,${qrCode}`}
              alt="QR Code"
              className="w-48 h-48"
            />
          </div>
          <p className="text-sm text-gray-500 mt-2 text-center">Scan with WhatsApp to connect</p>
        </div>
      ) : status === 'open' ? (
        <div className="mb-4">
          <div className="flex items-center gap-2 text-sm text-green-600">
            <span className="text-lg">✓</span>
            <span>{instance.phone || 'Connected'}</span>
          </div>
        </div>
      ) : null}

      <div className="flex gap-2">
        <button
          onClick={() => {
            setShowQR(!showQR);
            onRefresh();
          }}
          className="flex-1 px-3 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors"
        >
          {showQR ? 'Hide QR' : 'Show QR'}
        </button>
        {status === 'open' && (
          <a
            href={`/whatsapp/${instance.name}/send`}
            className="flex-1 px-3 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors text-center no-underline"
          >
            Send Message
          </a>
        )}
      </div>
    </div>
  );
}

interface CreateInstanceModalProps {
  isOpen: boolean;
  onClose: () => void;
  onSubmit: (name: string) => Promise<void>;
}

export function CreateInstanceModal({ isOpen, onClose, onSubmit }: CreateInstanceModalProps) {
  const [name, setName] = useState('');
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState('');

  if (!isOpen) return null;

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setError('');
    setLoading(true);

    try {
      await onSubmit(name);
      setName('');
      onClose();
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to create instance');
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50" onClick={onClose}>
      <div className="bg-white rounded-xl p-6 w-full max-w-md" onClick={(e) => e.stopPropagation()}>
        <h2 className="text-xl font-bold text-gray-900 mb-4">Create WhatsApp Instance</h2>

        {error && (
          <div className="bg-red-50 text-red-700 p-3 rounded-lg mb-4 text-sm">
            {error}
          </div>
        )}

        <form onSubmit={handleSubmit} className="space-y-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Instance Name
            </label>
            <input
              type="text"
              value={name}
              onChange={(e) => setName(e.target.value)}
              placeholder="my-instance"
              className="w-full px-3 py-2 border border-gray-300 rounded-lg"
              required
              pattern="[a-zA-Z0-9-_]+"
              title="Only letters, numbers, hyphens and underscores"
            />
            <p className="text-xs text-gray-500 mt-1">
              Use only letters, numbers, hyphens and underscores
            </p>
          </div>

          <div className="flex gap-3 pt-2">
            <button
              type="button"
              onClick={onClose}
              className="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
              disabled={loading}
            >
              Cancel
            </button>
            <button
              type="submit"
              className="flex-1 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
              disabled={loading}
            >
              {loading ? 'Creating...' : 'Create'}
            </button>
          </div>
        </form>
      </div>
    </div>
  );
}
