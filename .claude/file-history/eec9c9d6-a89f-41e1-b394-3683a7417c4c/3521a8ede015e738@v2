'use client';

import { useState, useEffect } from 'react';
import { useAuth } from '@/lib/store';

interface Deployment {
  id: string;
  name: string;
  repo: string;
  branch: string;
  status: 'building' | 'deployed' | 'failed';
  url: string;
  createdAt: string;
}

export default function DeployPage() {
  const { user, loading, initialize } = useAuth();
  const [deployments, setDeployments] = useState<Deployment[]>([]);
  const [showDeployModal, setShowDeployModal] = useState(false);

  useEffect(() => {
    initialize();
  }, [initialize]);

  const handleDeploy = async (data: { repo: string; branch: string; name: string }) => {
    try {
      const response = await fetch('/api/deploy', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      if (response.ok) {
        const deployment = await response.json();
        setDeployments([...deployments, deployment]);
        setShowDeployModal(false);
      }
    } catch (error) {
      alert(`Deployment failed: ${error}`);
    }
  };

  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
      </div>
    );
  }

  if (!user) {
    return (
      <div className="flex flex-col items-center justify-center min-h-screen">
        <p className="text-lg text-gray-600 mb-4">Please sign in to access deployments</p>
        <a href="/auth/signin" className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 no-underline">
          Sign In
        </a>
      </div>
    );
  }

  return (
    <div>
      {/* Header */}
      <div className="flex items-center justify-between mb-8">
        <div>
          <h1 className="text-3xl font-bold text-gray-900 mb-2">Deploy</h1>
          <p className="text-gray-600">Deploy websites from GitHub with Docker</p>
        </div>
        <button
          onClick={() => setShowDeployModal(true)}
          className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
        >
          + New Deployment
        </button>
      </div>

      {/* Deployments List */}
      {deployments.length === 0 ? (
        <div className="bg-white border border-gray-200 rounded-xl p-12 text-center">
          <div className="text-6xl mb-4">â¬†</div>
          <h3 className="text-xl font-semibold text-gray-900 mb-2">No deployments yet</h3>
          <p className="text-gray-600 mb-6">Deploy your first website from GitHub</p>
          <button
            onClick={() => setShowDeployModal(true)}
            className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
          >
            Deploy Website
          </button>
        </div>
      ) : (
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {deployments.map((deployment) => (
            <div key={deployment.id} className="bg-white border border-gray-200 rounded-xl p-5">
              <div className="flex items-start justify-between mb-4">
                <div>
                  <h3 className="font-semibold text-gray-900 text-lg">{deployment.name}</h3>
                  <p className="text-sm text-gray-500 font-mono">{deployment.repo}</p>
                </div>
                <StatusBadge status={deployment.status} />
              </div>

              <div className="space-y-2 mb-4">
                <div className="flex justify-between text-sm">
                  <span className="text-gray-600">Branch</span>
                  <span className="font-medium text-gray-900">{deployment.branch}</span>
                </div>
                <div className="flex justify-between text-sm">
                  <span className="text-gray-600">URL</span>
                  <a
                    href={deployment.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="font-medium text-indigo-600 hover:underline no-underline"
                  >
                    {deployment.url.replace('https://', '')}
                  </a>
                </div>
              </div>

              <a
                href={deployment.url}
                target="_blank"
                rel="noopener noreferrer"
                className="block px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 text-center transition-colors no-underline"
              >
                Visit Site â†’
              </a>
            </div>
          ))}
        </div>
      )}

      {/* Deployment Modal */}
      {showDeployModal && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50" onClick={() => setShowDeployModal(false)}>
          <div className="bg-white rounded-xl p-6 w-full max-w-md" onClick={(e) => e.stopPropagation()}>
            <h2 className="text-xl font-bold text-gray-900 mb-4">Deploy from GitHub</h2>

            <form
              onSubmit={(e) => {
                e.preventDefault();
                const formData = new FormData(e.currentTarget);
                handleDeploy({
                  repo: formData.get('repo') as string,
                  branch: formData.get('branch') as string,
                  name: formData.get('name') as string
                });
              }}
              className="space-y-4"
            >
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">GitHub Repository</label>
                <input
                  type="text"
                  name="repo"
                  placeholder="username/repo"
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg"
                  required
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">Branch</label>
                <input
                  type="text"
                  name="branch"
                  placeholder="main"
                  defaultValue="main"
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg"
                  required
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">Project Name</label>
                <input
                  type="text"
                  name="name"
                  placeholder="my-project"
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg"
                  required
                />
              </div>

              <div className="flex gap-3 pt-2">
                <button
                  type="button"
                  onClick={() => setShowDeployModal(false)}
                  className="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  className="flex-1 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
                >
                  Deploy
                </button>
              </div>
            </form>
          </div>
        </div>
      )}

      {/* Features Info */}
      <div className="mt-8">
        <h2 className="text-xl font-semibold text-gray-900 mb-4">Features</h2>
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          <FeatureCard
            icon="âš¡"
            title="Auto Deploy"
            description="Automatically deploy on push to main branch"
          />
          <FeatureCard
            icon="ðŸ”’"
            title="SSL/HTTPS"
            description="Automatic SSL certificate generation"
          />
          <FeatureCard
            icon="ðŸŒ"
            title="Custom Domains"
            description="Connect your own domain with DNS guides"
          />
        </div>
      </div>
    </div>
  );
}

function StatusBadge({ status }: { status: string }) {
  const config = {
    building: { label: 'Building', classes: 'px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-medium rounded-full' },
    deployed: { label: 'Deployed', classes: 'px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full' },
    failed: { label: 'Failed', classes: 'px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full' }
  };

  const { label, classes } = config[status as keyof typeof config] || config.deployed;

  return <span className={classes}>{label}</span>;
}

function FeatureCard({ icon, title, description }: { icon: string; title: string; description: string }) {
  return (
    <div className="bg-white border border-gray-200 rounded-xl p-5">
      <div className="flex items-center gap-3 mb-3">
        <span className="text-2xl">{icon}</span>
        <h3 className="font-semibold text-gray-900">{title}</h3>
      </div>
      <p className="text-sm text-gray-600">{description}</p>
    </div>
  );
}
