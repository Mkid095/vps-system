'use client';

import { useState, useEffect } from 'react';
import { useAuth } from '@/lib/store';
import { api } from '@/lib/api';
import type { Organization, Project } from '@/lib/api';
import { OrganizationCard } from '@/components/dashboard/databases/OrganizationCard';
import { ProjectCard } from '@/components/dashboard/databases/ProjectCard';
import { CreateOrganizationModal } from '@/components/dashboard/databases/CreateOrganizationModal';
import { CreateProjectModal } from '@/components/dashboard/databases/CreateProjectModal';

export default function DatabasesPage() {
  const { user, loading: authLoading, initialize } = useAuth();
  const [organizations, setOrganizations] = useState<Organization[]>([]);
  const [projects, setProjects] = useState<Project[]>([]);
  const [loading, setLoading] = useState(true);
  const [showOrgModal, setShowOrgModal] = useState(false);
  const [showProjectModal, setShowProjectModal] = useState(false);
  const [selectedOrg, setSelectedOrg] = useState<string | null>(null);

  useEffect(() => {
    initialize();
  }, [initialize]);

  useEffect(() => {
    if (user) {
      fetchData();
    }
  }, [user]);

  const fetchData = async () => {
    setLoading(true);
    try {
      const [orgsResponse, projectsResponse] = await Promise.all([
        api.getOrganizations(),
        api.getProjects(),
      ]);
      setOrganizations(orgsResponse.items);
      setProjects(projectsResponse.items);
    } catch (error) {
      console.error('Failed to fetch data:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleCreateOrganization = async (data: { name: string; slug: string }) => {
    await api.createOrganization(data);
    fetchData();
  };

  const handleCreateProject = async (data: { name: string; slug: string; organizationId: string }) => {
    await api.createProject(data.organizationId, { name: data.name, slug: data.slug });
    fetchData();
  };

  const handleDeleteOrganization = async (id: string) => {
    await api.deleteOrganization(id);
    fetchData();
  };

  if (authLoading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
      </div>
    );
  }

  if (!user) {
    return (
      <div className="flex flex-col items-center justify-center min-h-screen">
        <p className="text-lg text-gray-600 mb-4">Please sign in to access the databases</p>
        <a href="/auth/signin" className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 no-underline">
          Sign In
        </a>
      </div>
    );
  }

  const getProjectsByOrg = (orgId: string) => {
    return projects.filter(p => p.organization_id === orgId);
  };

  const displayedOrgs = selectedOrg
    ? organizations.filter(o => o.id === selectedOrg)
    : organizations;

  return (
    <div>
      {/* Header */}
      <div className="flex items-center justify-between mb-8">
        <div>
          <h1 className="text-3xl font-bold text-gray-900 mb-2">Databases</h1>
          <p className="text-gray-600">Manage your Supabase organizations and projects</p>
        </div>
        <div className="flex gap-3">
          <button
            onClick={() => setShowProjectModal(true)}
            className="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
          >
            + New Project
          </button>
          <button
            onClick={() => setShowOrgModal(true)}
            className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
          >
            + New Organization
          </button>
        </div>
      </div>

      {/* Organization Filter */}
      {organizations.length > 0 && (
        <div className="mb-6">
          <select
            value={selectedOrg || ''}
            onChange={(e) => setSelectedOrg(e.target.value || null)}
            className="px-4 py-2 border border-gray-300 rounded-lg bg-white"
          >
            <option value="">All Organizations</option>
            {organizations.map((org) => (
              <option key={org.id} value={org.id}>{org.name}</option>
            ))}
          </select>
        </div>
      )}

      {loading ? (
        <div className="flex items-center justify-center py-12">
          <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
        </div>
      ) : organizations.length === 0 ? (
        <div className="bg-white border border-gray-200 rounded-xl p-12 text-center">
          <div className="text-6xl mb-4">◉</div>
          <h3 className="text-xl font-semibold text-gray-900 mb-2">No organizations yet</h3>
          <p className="text-gray-600 mb-6">Create your first organization to get started</p>
          <button
            onClick={() => setShowOrgModal(true)}
            className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
          >
            Create Organization
          </button>
        </div>
      ) : (
        <>
          {/* Organizations */}
          <div className="mb-12">
            <h2 className="text-xl font-semibold text-gray-900 mb-4">Organizations</h2>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {displayedOrgs.map((org) => (
                <OrganizationCard
                  key={org.id}
                  organization={org}
                  projectCount={getProjectsByOrg(org.id).length}
                  onEdit={() => {}}
                  onDelete={handleDeleteOrganization}
                />
              ))}
            </div>
          </div>

          {/* Projects */}
          <div>
            <h2 className="text-xl font-semibold text-gray-900 mb-4">
              Projects {selectedOrg && `- ${organizations.find(o => o.id === selectedOrg)?.name}`}
            </h2>

            {projects.length === 0 ? (
              <div className="bg-white border border-gray-200 rounded-xl p-12 text-center">
                <div className="text-6xl mb-4">◇</div>
                <h3 className="text-xl font-semibold text-gray-900 mb-2">No projects yet</h3>
                <p className="text-gray-600 mb-6">Create your first Supabase project</p>
                <button
                  onClick={() => setShowProjectModal(true)}
                  className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
                >
                  Create Project
                </button>
              </div>
            ) : (
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                {projects
                  .filter(p => !selectedOrg || p.organization_id === selectedOrg)
                  .map((project) => {
                    const org = organizations.find(o => o.id === project.organization_id);
                    return (
                      <ProjectCard
                        key={project.id}
                        project={project}
                        organizationName={org?.name || 'Unknown'}
                        organizationId={org?.id || ''}
                      />
                    );
                  })}
              </div>
            )}
          </div>
        </>
      )}

      {/* Modals */}
      <CreateOrganizationModal
        isOpen={showOrgModal}
        onClose={() => setShowOrgModal(false)}
        onSubmit={handleCreateOrganization}
      />

      <CreateProjectModal
        isOpen={showProjectModal}
        onClose={() => setShowProjectModal(false)}
        onSubmit={handleCreateProject}
        organizations={organizations}
      />
    </div>
  );
}
