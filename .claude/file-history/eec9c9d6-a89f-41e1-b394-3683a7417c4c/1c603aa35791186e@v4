# Project-Specific Studio Routing
# All Studio requests must be of the form /studio/{project-slug}[/path]

# Handle /studio (without slug) - redirect to nextmavens project
location = /studio {
    return 302 /studio/nextmavens;
}

# Studio project routing - handles /studio/{slug} and /studio/{slug}/*
location ~ ^/studio/([a-z0-9-]+)(/.*)?$ {
    # Map project slugs to their Studio ports
    set $studio_port 3000;
    if ($request_uri ~ ^/studio/nextmavens) { set $studio_port 3001; }
    if ($request_uri ~ ^/studio/test-1769376137) { set $studio_port 3002; }
    
    # Strip /studio/{slug} prefix and pass remaining path to Studio
    rewrite ^/studio/[a-z0-9-]+(/.*)$ $1 break;
    rewrite ^/studio/[a-z0-9-]+$ / break;
    
    proxy_pass http://127.0.0.1:$studio_port;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_read_timeout 86400;
    proxy_send_timeout 86400;
}
