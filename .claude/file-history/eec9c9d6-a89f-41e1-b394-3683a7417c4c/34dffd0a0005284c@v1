import Link from 'next/link';

interface QuickActionCardProps {
  title: string;
  description: string;
  icon: string;
  href: string;
  color: 'indigo' | 'green' | 'blue' | 'orange' | 'purple';
}

const colorStyles = {
  indigo: {
    bg: 'bg-indigo-50',
    iconBg: 'bg-indigo-100',
    iconText: 'text-indigo-600',
    border: 'hover:border-indigo-300'
  },
  green: {
    bg: 'bg-green-50',
    iconBg: 'bg-green-100',
    iconText: 'text-green-600',
    border: 'hover:border-green-300'
  },
  blue: {
    bg: 'bg-blue-50',
    iconBg: 'bg-blue-100',
    iconText: 'text-blue-600',
    border: 'hover:border-blue-300'
  },
  orange: {
    bg: 'bg-orange-50',
    iconBg: 'bg-orange-100',
    iconText: 'text-orange-600',
    border: 'hover:border-orange-300'
  },
  purple: {
    bg: 'bg-purple-50',
    iconBg: 'bg-purple-100',
    iconText: 'text-purple-600',
    border: 'hover:border-purple-300'
  }
};

export function QuickActionCard({ title, description, icon, href, color }: QuickActionCardProps) {
  const style = colorStyles[color];

  return (
    <Link
      href={href}
      className={`${style.bg} ${style.border} bg-white border-2 border-transparent rounded-xl p-5 transition-all duration-200 block no-underline group hover:shadow-md`}
    >
      <div className={`${style.iconBg} ${style.iconText} w-12 h-12 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-200`}>
        <span className="text-xl">{icon}</span>
      </div>
      <h3 className="font-semibold text-gray-900 mb-1 group-hover:text-indigo-600 transition-colors">
        {title}
      </h3>
      <p className="text-sm text-gray-600">{description}</p>
    </Link>
  );
}
