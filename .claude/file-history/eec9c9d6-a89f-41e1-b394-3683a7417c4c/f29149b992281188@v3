'use client';

import { useState, useEffect } from 'react';
import { useParams, useRouter } from 'next/navigation';
import { useAuth } from '@/lib/store';
import { api } from '@/lib/api';
import type { Organization, Project } from '@/lib/api';
import { ProjectCard } from '@/components/dashboard/databases/ProjectCard';
import { CreateProjectModal } from '@/components/dashboard/databases/CreateProjectModal';

export default function OrganizationDetailPage() {
  const { user, loading: authLoading, initialize } = useAuth();
  const params = useParams();
  const router = useRouter();
  const orgId = params.id as string;

  const [organization, setOrganization] = useState<Organization | null>(null);
  const [projects, setProjects] = useState<Project[]>([]);
  const [loading, setLoading] = useState(true);
  const [showProjectModal, setShowProjectModal] = useState(false);

  useEffect(() => {
    initialize();
  }, [initialize]);

  useEffect(() => {
    if (user && orgId) {
      fetchOrganizationData();
    }
  }, [user, orgId]);

  const fetchOrganizationData = async () => {
    setLoading(true);
    try {
      const [orgsResponse, projectsResponse] = await Promise.all([
        api.getOrganizations(),
        api.getProjects(orgId),
      ]);

      const org = orgsResponse.items.find((o: Organization) => o.id === orgId);
      if (!org) {
        router.push('/databases');
        return;
      }

      setOrganization(org);
      setProjects(projectsResponse.items);
    } catch (error) {
      console.error('Failed to fetch organization data:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleCreateProject = async (data: { name: string; slug: string; organizationId: string }) => {
    await api.createProject(orgId, { name: data.name, slug: data.slug });
    fetchOrganizationData();
  };

  const handleDeleteProject = async (projectId: string) => {
    if (confirm('Are you sure you want to delete this project?')) {
      await api.deleteProject(projectId);
      fetchOrganizationData();
    }
  };

  if (authLoading || loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
      </div>
    );
  }

  if (!user) {
    return (
      <div className="flex flex-col items-center justify-center min-h-screen">
        <p className="text-lg text-gray-600 mb-4">Please sign in to access this page</p>
        <a
          href="/auth/signin"
          className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 no-underline"
        >
          Sign In
        </a>
      </div>
    );
  }

  if (!organization) {
    return (
      <div className="flex flex-col items-center justify-center min-h-screen">
        <p className="text-lg text-gray-600 mb-4">Organization not found</p>
        <button
          onClick={() => router.push('/databases')}
          className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700"
        >
          Back to Organizations
        </button>
      </div>
    );
  }

  return (
    <div>
      {/* Header with back button */}
      <div className="mb-6">
        <button
          onClick={() => router.push('/databases')}
          className="text-indigo-600 hover:text-indigo-700 text-sm font-medium mb-4 flex items-center gap-2"
        >
          ← Back to Organizations
        </button>
      </div>

      {/* Organization Header */}
      <div className="bg-white border border-gray-200 rounded-xl p-6 mb-8">
        <div className="flex items-center gap-4">
          {organization.logo_url ? (
            <img
              src={organization.logo_url}
              alt={organization.name}
              className="w-16 h-16 rounded-xl object-cover"
            />
          ) : (
            <div className="w-16 h-16 rounded-xl bg-indigo-100 flex items-center justify-center">
              <span className="text-indigo-600 text-2xl font-bold">
                {organization.name.charAt(0).toUpperCase()}
              </span>
            </div>
          )}
          <div className="flex-1">
            <h1 className="text-2xl font-bold text-gray-900">{organization.name}</h1>
            <p className="text-gray-500">{organization.slug}</p>
          </div>
          <div className="flex gap-3">
            <a
              href={`/organizations/${orgId}/team`}
              className="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors no-underline"
            >
              Manage Team
            </a>
            <button
              onClick={() => setShowProjectModal(true)}
              className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
            >
              + New Project
            </button>
          </div>
        </div>
      </div>

      {/* Stats */}
      <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div className="bg-white border border-gray-200 rounded-xl p-6">
          <div className="text-sm text-gray-500 mb-1">Projects</div>
          <div className="text-3xl font-bold text-gray-900">{projects.length}</div>
        </div>
        <div className="bg-white border border-gray-200 rounded-xl p-6">
          <div className="text-sm text-gray-500 mb-1">Active</div>
          <div className="text-3xl font-bold text-green-600">
            {projects.filter(p => p.status === 'active').length}
          </div>
        </div>
        <div className="bg-white border border-gray-200 rounded-xl p-6">
          <div className="text-sm text-gray-500 mb-1">Provisioning</div>
          <div className="text-3xl font-bold text-yellow-600">
            {projects.filter(p => p.status === 'provisioning').length}
          </div>
        </div>
      </div>

      {/* Projects */}
      <div>
        <h2 className="text-xl font-semibold text-gray-900 mb-4">Projects</h2>

        {projects.length === 0 ? (
          <div className="bg-white border border-gray-200 rounded-xl p-12 text-center">
            <div className="text-6xl mb-4">◇</div>
            <h3 className="text-xl font-semibold text-gray-900 mb-2">No projects yet</h3>
            <p className="text-gray-600 mb-6">Create your first Supabase project in this organization</p>
            <button
              onClick={() => setShowProjectModal(true)}
              className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
            >
              Create Project
            </button>
          </div>
        ) : (
          <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            {projects.map((project) => (
              <ProjectCard
                key={project.id}
                project={project}
                organizationName={organization.name}
                organizationId={organization.id}
                onDelete={handleDeleteProject}
              />
            ))}
          </div>
        )}
      </div>

      {/* Create Project Modal */}
      <CreateProjectModal
        isOpen={showProjectModal}
        onClose={() => setShowProjectModal(false)}
        onSubmit={handleCreateProject}
        organizations={[organization]}
        defaultOrganizationId={orgId}
      />
    </div>
  );
}
