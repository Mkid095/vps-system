import { useState, useEffect, useCallback, useRef } from 'react';
import { getVPSStats, type VPSStats } from '@/lib/api-vps/vps';

/**
 * Hook to fetch and automatically update VPS stats in real-time
 * @param updateInterval - Update interval in milliseconds (default: 5000ms)
 */
export function useVpsStats(updateInterval: number = 5000) {
  const [stats, setStats] = useState<VPSStats>({
    disk: { used: '--', total: '--', percent: 0 },
    cpu: { usage: 0, cores: 0 },
    ram: { used: '--', total: '--', percent: 0 },
    network: { in: '--', out: '--' },
    uptime: '--'
  });
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const intervalRef = useRef<NodeJS.Timeout | null>(null);

  const fetchStats = useCallback(async () => {
    try {
      setError(null);
      const data = await getVPSStats();
      setStats(data);
      setLoading(false);
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to fetch stats');
      setLoading(false);
    }
  }, []);

  useEffect(() => {
    // Initial fetch
    fetchStats();

    // Set up interval for real-time updates
    if (updateInterval > 0) {
      intervalRef.current = setInterval(fetchStats, updateInterval);
    }

    return () => {
      if (intervalRef.current) {
        clearInterval(intervalRef.current);
      }
    };
  }, [fetchStats, updateInterval]);

  return { stats, loading, error, refetch: fetchStats };
}

/**
 * Hook to fetch service health status
 */
export function useServiceHealth() {
  const [health, setHealth] = useState({
    whatsapp: false,
    supabase: false,
    evolution: false
  });
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const checkHealth = async () => {
      try {
        const response = await fetch('/api/health');
        if (response.ok) {
          const data = await response.json();
          setHealth(data);
        }
      } catch (error) {
        console.error('Health check failed:', error);
      } finally {
        setLoading(false);
      }
    };

    checkHealth();
    const interval = setInterval(checkHealth, 30000); // Check every 30s

    return () => clearInterval(interval);
  }, []);

  return { health, loading };
}
