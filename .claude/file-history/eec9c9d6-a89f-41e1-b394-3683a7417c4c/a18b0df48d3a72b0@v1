// MCP Configuration Card Component
// Shows MCP configuration and installation instructions

import { useState, useEffect } from 'react';

interface MCPConfigCardProps {
  organizationId: string;
  organizationName: string;
  type: 'organization' | 'project';
  projectId?: string;
  projectName?: string;
}

export function MCPConfigCard({
  organizationId,
  organizationName,
  type,
  projectId,
  projectName,
}: MCPConfigCardProps) {
  const [token, setToken] = useState<string | null>(null);
  const [mcpUrl, setMcpUrl] = useState<string>('');
  const [loading, setLoading] = useState(true);
  const [copied, setCopied] = useState(false);
  const [showConfig, setShowConfig] = useState(false);

  useEffect(() => {
    loadToken();
  }, [organizationId, projectId]);

  const loadToken = async () => {
    setLoading(true);
    try {
      const endpoint = type === 'organization'
        ? `/api/orgs/${organizationId}/mcp-token`
        : `/api/projects/${projectId}/mcp-token`;

      const response = await fetch(endpoint, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          Authorization: `Bearer ${localStorage.getItem('supabase_access_token')}`,
        },
      });

      if (response.ok) {
        const data = await response.json();
        setToken(data.access_token);
        setMcpUrl(data.mcp_url);
      }
    } catch (error) {
      console.error('Failed to load MCP token:', error);
    } finally {
      setLoading(false);
    }
  };

  const copyToClipboard = (text: string) => {
    navigator.clipboard.writeText(text);
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  };

  if (loading) {
    return (
      <div className="bg-gray-50 border border-gray-200 rounded-xl p-5">
        <div className="flex items-center gap-3">
          <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-indigo-600"></div>
          <span className="text-sm text-gray-600">Loading MCP configuration...</span>
        </div>
      </div>
    );
  }

  const configJson = token ? {
    mcpServers: {
      nextmavens: {
        type: 'http',
        url: mcpUrl,
        headers: {
          Authorization: `Bearer ${token}`,
        },
      },
    },
  } : null;

  const installCommand = token
    ? `claude mcp add nextmavens -- url ${mcpUrl} --token ${token}`
    : '';

  const npxCommand = token
    ? `npx -y @nextmavens/mcp-server --url ${mcpUrl} --token ${token}`
    : '';

  return (
    <div className="mt-4 bg-gradient-to-br from-indigo-50 to-blue-50 border border-indigo-200 rounded-xl overflow-hidden">
      <button
        onClick={() => setShowConfig(!showConfig)}
        className="w-full px-5 py-4 flex items-center justify-between hover:bg-white/50 transition-colors"
      >
        <div className="flex items-center gap-3">
          <div className="w-10 h-10 rounded-lg bg-indigo-600 flex items-center justify-center">
            <span className="text-white text-lg">⚡</span>
          </div>
          <div className="text-left">
            <h4 className="font-semibold text-gray-900">Claude MCP Integration</h4>
            <p className="text-sm text-gray-600">
              Connect {type === 'project' ? projectName : organizationName} to Claude Desktop
            </p>
          </div>
        </div>
        <span className={`text-gray-400 transition-transform ${showConfig ? 'rotate-180' : ''}`}>
          ▼
        </span>
      </button>

      {showConfig && (
        <div className="px-5 pb-5 space-y-4 border-t border-indigo-100 pt-4">
          {/* Quick Install */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Quick Install (Recommended)
            </label>
            <div className="bg-gray-900 rounded-lg p-3 relative group">
              <code className="text-sm text-green-400 block break-all pr-8">
                {installCommand}
              </code>
              <button
                onClick={() => copyToClipboard(installCommand)}
                className="absolute right-2 top-1/2 -translate-y-1/2 px-2 py-1 bg-indigo-600 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity"
              >
                {copied ? '✓ Copied' : 'Copy'}
              </button>
            </div>
            <p className="text-xs text-gray-500 mt-2">
              Run this command in your terminal to install the MCP server
            </p>
          </div>

          {/* Alternative: npx command */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Alternative: Standalone Server
            </label>
            <div className="bg-gray-900 rounded-lg p-3 relative group">
              <code className="text-sm text-blue-400 block break-all pr-8">
                {npxCommand}
              </code>
              <button
                onClick={() => copyToClipboard(npxCommand)}
                className="absolute right-2 top-1/2 -translate-y-1/2 px-2 py-1 bg-indigo-600 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity"
              >
                Copy
              </button>
            </div>
          </div>

          {/* MCP Config JSON */}
          {configJson && (
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Claude Desktop Config (JSON)
              </label>
              <div className="bg-gray-900 rounded-lg p-3 relative group max-h-48 overflow-y-auto">
                <pre className="text-xs text-gray-300">
                  {JSON.stringify(configJson, null, 2)}
                </pre>
                <button
                  onClick={() => copyToClipboard(JSON.stringify(configJson, null, 2))}
                  className="absolute right-2 top-2 px-2 py-1 bg-indigo-600 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity"
                >
                  Copy
                </button>
              </div>
              <p className="text-xs text-gray-500 mt-2">
                Add this to your Claude Desktop settings ({'`'}~/.config/claude/claude_desktop_config.json{'`'})
              </p>
            </div>
          )}

          {/* Access Token */}
          {token && (
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Access Token
              </label>
              <div className="bg-gray-900 rounded-lg p-3 relative group">
                <code className="text-xs text-yellow-400 block break-all pr-8">
                  {token}
                </code>
                <button
                  onClick={() => copyToClipboard(token)}
                  className="absolute right-2 top-2 px-2 py-1 bg-indigo-600 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity"
                >
                  Copy
                </button>
              </div>
              <p className="text-xs text-orange-600 mt-2 font-medium">
                Keep this token secret! It provides full access to your projects.
              </p>
            </div>
          )}

          {/* Available Tools */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Available Tools (29 total)
            </label>
            <div className="bg-white rounded-lg p-3 border border-gray-200">
              <div className="grid grid-cols-3 gap-2 text-xs">
                <ToolBadge name="list_projects" />
                <ToolBadge name="get_project" />
                <ToolBadge name="create_project" />
                <ToolBadge name="list_organizations" />
                <ToolBadge name="execute_sql" />
                <ToolBadge name="list_tables" />
                <ToolBadge name="list_extensions" />
                <ToolBadge name="apply_migration" />
                <ToolBadge name="generate_types" />
                <ToolBadge name="get_logs" />
                <ToolBadge name="get_advisors" />
                <ToolBadge name="list_branches" />
                <ToolBadge name="deploy_function" />
                <ToolBadge name="get_keys" />
              </div>
              <p className="text-xs text-gray-500 mt-2 text-center">
                + 14 more tools available
              </p>
            </div>
          </div>

          {/* Security Notice */}
          <div className="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
            <div className="flex gap-2">
              <span className="text-yellow-600">⚠</span>
              <div className="text-xs text-yellow-800">
                <p className="font-medium mb-1">Security Notice</p>
                <ul className="space-y-1 text-yellow-700">
                  <li>• Never share your access token publicly</li>
                  <li>• Use read-only mode when possible</li>
                  <li>• Revoke tokens if they're compromised</li>
                </ul>
              </div>
            </div>
          </div>

          {/* Actions */}
          <div className="flex gap-2">
            <button
              onClick={loadToken}
              className="flex-1 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors"
            >
              Regenerate Token
            </button>
            <a
              href="https://docs.anthropic.com/en/docs/build-with-claude/mcp"
              target="_blank"
              rel="noopener noreferrer"
              className="px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors no-underline"
            >
              MCP Docs
            </a>
          </div>
        </div>
      )}
    </div>
  );
}

function ToolBadge({ name }: { name: string }) {
  return (
    <span className="px-2 py-1 bg-indigo-100 text-indigo-700 rounded text-xs font-mono">
      {name}
    </span>
  );
}
