'use client';

import { useState, useEffect } from 'react';
import { useAuth } from '@/lib/store';

export default function EmailsPage() {
  const { user, loading, initialize } = useAuth();

  useEffect(() => {
    initialize();
  }, [initialize]);

  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
      </div>
    );
  }

  if (!user) {
    return (
      <div className="flex flex-col items-center justify-center min-h-screen">
        <p className="text-lg text-gray-600 mb-4">Please sign in to access emails</p>
        <a href="/auth/signin" className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 no-underline">
          Sign In
        </a>
      </div>
    );
  }

  return (
    <div>
      {/* Header */}
      <div className="mb-8">
        <h1 className="text-3xl font-bold text-gray-900 mb-2">Email Management</h1>
        <p className="text-gray-600">Transactional emails and SMTP configuration</p>
      </div>

      {/* Coming Soon */}
      <div className="bg-white border border-gray-200 rounded-xl p-12 text-center">
        <div className="text-6xl mb-4">âœ‰</div>
        <h3 className="text-xl font-semibold text-gray-900 mb-2">Email Services Coming Soon</h3>
        <p className="text-gray-600 mb-6 max-w-md mx-auto">
          This section will provide comprehensive email management capabilities including transactional emails,
          email templates, SMTP configuration, and delivery analytics.
        </p>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-2xl mx-auto mt-8">
          <FeatureCard
            icon="ðŸ“§"
            title="Transactional Email"
            description="Send automated transactional emails for your applications"
          />
          <FeatureCard
            icon="ðŸ“"
            title="Email Templates"
            description="Design and manage email templates with visual editor"
          />
          <FeatureCard
            icon="âš™ï¸"
            title="SMTP Configuration"
            description="Connect custom SMTP servers or use built-in delivery"
          />
          <FeatureCard
            icon="ðŸ“Š"
            title="Delivery Analytics"
            description="Track email delivery rates, bounces, and engagement"
          />
        </div>
