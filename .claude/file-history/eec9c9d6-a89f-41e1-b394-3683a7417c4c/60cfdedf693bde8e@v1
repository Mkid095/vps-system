import { useState } from 'react';
import { MCPConfigCard } from './MCPConfigCard';
import type { Project } from '@/lib/api';

interface ProjectCardProps {
  project: Project;
  organizationName: string;
  organizationId: string;
  onDelete?: (projectId: string) => void;
}

export function ProjectCard({ project, organizationName, organizationId, onDelete }: ProjectCardProps) {
  const [showActions, setShowActions] = useState(false);

  const statusConfig: Record<string, { label: string; classes: string }> = {
    active: {
      label: 'Active',
      classes: 'px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full'
    },
    provisioning: {
      label: 'Provisioning',
      classes: 'px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-medium rounded-full'
    },
    suspended: {
      label: 'Suspended',
      classes: 'px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full'
    },
    archived: {
      label: 'Archived',
      classes: 'px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-full'
    }
  };

  const config = statusConfig[project.status] || statusConfig.active;

  // Generate URLs from project data - point to self-hosted Studio
  const studioUrl = project.db_name ? `/studio/${project.slug}` : null;
  const apiUrl = project.db_name ? `/projects/${project.id}/settings` : null;

  const handleDelete = () => {
    if (confirm(`Delete project "${project.slug}"? This action cannot be undone.`)) {
      onDelete?.(project.id);
    }
  };

  return (
    <div className="space-y-4">
      <div className="bg-white border border-gray-200 rounded-xl p-5 hover:shadow-md transition-all">
        <div className="flex items-start justify-between mb-4">
          <div className="flex-1">
            <h4 className="font-semibold text-gray-900 text-lg mb-1">{project.slug}</h4>
            <p className="text-sm text-gray-500">{organizationName}</p>
          </div>
          <div className="flex items-center gap-2">
            <span className={config.classes}>{config.label}</span>
            {onDelete && (
              <div className="relative">
                <button
                  onClick={() => setShowActions(!showActions)}
                  className="p-1 hover:bg-gray-100 rounded-lg transition-colors"
                >
                  <span className="text-gray-400 text-sm">•••</span>
                </button>

                {showActions && (
                  <div className="absolute right-0 mt-2 w-40 bg-white border border-gray-200 rounded-lg shadow-lg z-10">
                    <button
                      onClick={handleDelete}
                      className="w-full px-3 py-2 text-left text-sm text-red-600 hover:bg-red-50 transition-colors"
                    >
                      Delete Project
                    </button>
                  </div>
                )}
              </div>
            )}
          </div>
        </div>

        <div className="space-y-2 mb-4">
          <div className="flex items-center justify-between text-sm">
            <span className="text-gray-500">Database</span>
            <span className="font-mono text-xs bg-gray-100 px-2 py-1 rounded">
              {project.db_name || 'N/A'}
            </span>
          </div>
          <div className="flex items-center justify-between text-sm">
            <span className="text-gray-500">API Keys</span>
            <span className="text-xs text-green-600">✓ Configured</span>
          </div>
        </div>

        <div className="flex gap-2">
          {studioUrl && (
            <a
              href={studioUrl}
              target="_blank"
              rel="noopener noreferrer"
              className="flex-1 px-3 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors text-center no-underline"
            >
              Open Studio
            </a>
          )}
          {apiUrl && (
            <a
              href={apiUrl}
              className="flex-1 px-3 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors text-center no-underline"
            >
              Settings
            </a>
          )}
        </div>
      </div>

      {/* MCP Configuration */}
      <MCPConfigCard
        organizationId={organizationId}
        organizationName={organizationName}
        type="project"
        projectId={project.id}
        projectName={project.slug}
      />
    </div>
  );
}
