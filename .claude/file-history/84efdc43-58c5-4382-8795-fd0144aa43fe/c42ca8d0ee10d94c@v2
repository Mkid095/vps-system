  <script>
    const API_BASE = window.location.origin;

    // Check auth
    function checkAuth() {
      const token = localStorage.getItem('token');
      if (!token) {
        window.location.href = '/';
        return false;
      }
      return true;
    }

    // Load user
    function loadUser() {
      const user = JSON.parse(localStorage.getItem('user') || '{}');
      document.getElementById('user-name').textContent = user.name || 'Developer';
      document.getElementById('user-email').textContent = user.email || '';
      document.getElementById('user-avatar').textContent = (user.name || 'D')[0].toUpperCase();
    }

    // Switch views
    function switchView(view) {
      document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
      document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));

      document.getElementById('view-' + view)?.classList.add('active');
      document.querySelector(`[data-view="${view}"]`)?.classList.add('active');

      // Update page title
      const titles = {
        dashboard: 'Dashboard',
        projects: 'Projects',
        services: 'Services',
        'project-detail': 'Project Details'
      };
      document.getElementById('page-title').textContent = titles[view] || 'Dashboard';

      // Load data
      if (view === 'dashboard') loadDashboard();
      else if (view === 'projects') loadProjects();
      else if (view === 'services') loadServices();
    }

    // Load dashboard
    async function loadDashboard() {
      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/developer/dashboard`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        const data = await res.json();

        if (!res.ok) throw new Error(data.error || 'Failed to load dashboard');

        const stats = data.dashboard;
        document.getElementById('stat-projects').textContent = stats.total_projects || 0;
        document.getElementById('stat-keys').textContent = stats.active_api_keys || 0;
        document.getElementById('stat-requests').textContent = (stats.total_requests_30d || 0).toLocaleString();

        // Load recent projects
        loadProjects(true);
      } catch (err) {
        console.error(err);
      }
    }

    // Load projects
    async function loadProjects(recent = false) {
      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/projects`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        const data = await res.json();

        if (!res.ok) throw new Error(data.error || 'Failed to load projects');

        const projects = data.projects || [];
        const containerId = recent ? 'recent-projects' : 'all-projects';
        const container = document.getElementById(containerId);

        if (projects.length > 0) {
          container.innerHTML = projects.slice(0, recent ? 3 : undefined).map(p => `
            <div class="project-card">
              <div class="project-name">${escapeHtml(p.project_name)}</div>
              <div class="project-id">${escapeHtml(p.id.substring(0, 8))}</div>
              <div class="project-meta">
                Created: ${new Date(p.created_at).toLocaleDateString()}
              </div>
              <div class="project-actions">
                <button class="btn btn-secondary btn-sm" onclick="viewProject('${p.id}')">Manage</button>
              </div>
            </div>
          `).join('');
        } else {
          container.innerHTML = `
            <div class="empty-state" style="grid-column: 1 / -1;">
              <p>No projects yet. Create your first project!</p>
            </div>
          `;
        }
      } catch (err) {
        console.error(err);
      }
    }

    // Load services
    async function loadServices() {
      const token = localStorage.getItem('token');
      const container = document.getElementById('services-grid');

      try {
        const res = await fetch(`${API_BASE}/api/services`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        const data = await res.json();

        if (!res.ok) throw new Error(data.error || 'Failed to load services');

        const services = data.services || [];
        container.innerHTML = services.map(s => `
          <div class="service-card">
            <div class="service-header">
              <div class="service-icon">
                ${getServiceIcon(s.id)}
              </div>
              <div class="service-name">${s.name}</div>
            </div>
            <div class="service-description">${s.description}</div>
            <div class="service-features">
              ${s.features.map(f => `<span class="feature-tag">${f}</span>`).join('')}
            </div>
            <div class="service-endpoint">
              ${Object.entries(s.endpoints).map(([k, v]) => `<div>${k}: ${v}</div>`).join('')}
            </div>
          </div>
        `).join('');
      } catch (err) {
        container.innerHTML = `<div class="error-message">${escapeHtml(err.message)}</div>`;
      }
    }

    // Get service icon
    function getServiceIcon(serviceId) {
      const icons = {
        database: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/></svg>`,
        auth: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/></svg>`,
        realtime: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`,
        storage: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/></svg>`,
        mcp: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/></svg>`
      };
      return icons[serviceId] || icons.database;
    }

    // View project detail
    async function viewProject(projectId) {
      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/projects/${projectId}/service-keys`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        const data = await res.json();

        if (!res.ok) throw new Error(data.error || 'Failed to load project');

        document.getElementById('detail-project-name').textContent = data.project.project_name;

        const content = document.getElementById('project-detail-content');
        content.innerHTML = `
          <div style="margin-bottom: 24px;">
            <h3 style="font-size: 14px; color: var(--slate-500); margin-bottom: 8px;">Project ID</h3>
            <code style="font-size: 13px; background: var(--slate-100); padding: 8px 12px; border-radius: 6px;">${escapeHtml(data.project.id)}</code>
          </div>

          <div style="margin-bottom: 24px;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
              <h3 style="font-size: 16px; font-weight: 600;">API Keys</h3>
              <button class="btn btn-primary btn-sm" onclick="openCreateKeyModal('${projectId}')">+ Create Key</button>
            </div>
            <div class="keys-list">
              ${renderKeysByService(data.keys)}
            </div>
          </div>

          <div>
            <h3 style="font-size: 16px; font-weight: 600; margin-bottom: 16px;">Endpoints</h3>
            <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 12px;">
              <div class="service-endpoint">Gateway: https://api.nextmavens.cloud</div>
              <div class="service-endpoint">Auth: https://auth.nextmavens.cloud</div>
              <div class="service-endpoint">GraphQL: https://graphql.nextmavens.cloud</div>
              <div class="service-endpoint">Realtime: wss://realtime.nextmavens.cloud</div>
              <div class="service-endpoint">Storage: https://telegram.nextmavens.cloud</div>
              <div class="service-endpoint">MCP: github.com/Mkid095/nextmavens-mcp-server</div>
            </div>
          </div>
        `;

        switchView('project-detail');
      } catch (err) {
        alert(err.message);
      }
    }

    // Render keys by service
    function renderKeysByService(keys) {
      const serviceNames = {
        database: 'Database',
        auth: 'Authentication',
        realtime: 'Realtime',
        storage: 'Storage',
        mcp: 'MCP Server',
        general: 'General'
      };

      const hasKeys = Object.values(keys).some(k => k.length > 0);

      if (!hasKeys) {
        return `
          <div class="empty-state">
            <p>No API keys yet. Create your first key to get started!</p>
          </div>
        `;
      }

      return Object.entries(keys).map(([service, serviceKeys]) => {
        if (serviceKeys.length === 0) return '';

        return `
          <div style="margin-bottom: 16px;">
            <h4 style="font-size: 14px; font-weight: 600; margin-bottom: 8px; color: var(--slate-700);">${serviceNames[service] || service}</h4>
            ${serviceKeys.map(k => `
              <div class="key-item">
                <div class="key-info">
                  <div class="key-name">${escapeHtml(k.name || `${k.key_type} key`)}</div>
                  <div class="key-preview">${k.key_prefix}•••••••••••••••••••••••</div>
                  <div class="key-meta">Created: ${new Date(k.created_at).toLocaleString()}</div>
                </div>
                <div class="key-actions">
                  <button class="btn btn-secondary btn-sm" onclick="revokeKey('${k.id}')">Revoke</button>
                </div>
              </div>
            `).join('')}
          </div>
        `;
      }).join('');
    }

    // Open create project modal
    function openCreateProjectModal() {
      document.getElementById('project-name').value = '';
      document.getElementById('create-project-error').classList.add('hidden');
      document.getElementById('create-project-modal').classList.add('active');
    }

    // Handle create project
    async function handleCreateProject(e) {
      e.preventDefault();
      const projectName = document.getElementById('project-name').value;
      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/projects`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ project_name: projectName })
        });

        const data = await res.json();

        if (!res.ok) throw new Error(data.error || 'Failed to create project');

        closeModals();
        loadDashboard();
        loadProjects();

        // Show success with keys
        showNewKey(data.api_keys.public_key, 'Public Key');
      } catch (err) {
        const errorEl = document.getElementById('create-project-error');
        errorEl.textContent = err.message;
        errorEl.classList.remove('hidden');
      }
    }

    // Open create key modal
    function openCreateKeyModal(projectId) {
      document.getElementById('key-project-id').value = projectId;
      document.getElementById('key-service').value = 'general';
      document.getElementById('key-type').value = 'public';
      document.getElementById('key-name').value = '';
      document.getElementById('create-key-error').classList.add('hidden');
      document.getElementById('create-key-modal').classList.add('active');
    }

    // Handle create key
    async function handleCreateKey(e) {
      e.preventDefault();
      const projectId = document.getElementById('key-project-id').value;
      const service = document.getElementById('key-service').value;
      const keyType = document.getElementById('key-type').value;
      const name = document.getElementById('key-name').value;
      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/projects/${projectId}/service-keys`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({
            service,
            key_type: keyType,
            name: name || undefined
          })
        });

        const data = await res.json();

        if (!res.ok) throw new Error(data.error || 'Failed to create API key');

        closeModals();
        showNewKey(data.api_key.key);
        viewProject(projectId);
      } catch (err) {
        const errorEl = document.getElementById('create-key-error');
        errorEl.textContent = err.message;
        errorEl.classList.remove('hidden');
      }
    }

    // Show new key
    function showNewKey(key, label = 'API Key') {
      document.getElementById('new-key-value').textContent = key;
      document.getElementById('show-key-modal').classList.add('active');
    }

    // Copy new key
    function copyNewKey() {
      const key = document.getElementById('new-key-value').textContent;
      navigator.clipboard.writeText(key).then(() => {
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = 'Copied!';
        setTimeout(() => btn.textContent = originalText, 2000);
      });
    }

    // Close key modal
    function closeKeyModal() {
      document.getElementById('show-key-modal').classList.remove('active');
    }

    // Revoke key
    async function revokeKey(keyId) {
      if (!confirm('Are you sure you want to revoke this API key? This action cannot be undone.')) return;

      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/keys/${keyId}`, {
          method: 'DELETE',
          headers: { 'Authorization': `Bearer ${token}` }
        });

        if (!res.ok) throw new Error('Failed to revoke API key');

        // Reload current view
        const projectId = document.getElementById('key-project-id').value;
        if (projectId) viewProject(projectId);
      } catch (err) {
        alert(err.message);
      }
    }

    // Close modals
    function closeModals() {
      document.querySelectorAll('.modal-overlay').forEach(el => el.classList.remove('active'));
    }

    // Logout
    function logout() {
      localStorage.removeItem('token');
      localStorage.removeItem('user');
      window.location.href = '/';
    }

    // Escape HTML
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Close modal on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModals();
    });

    // Close modal on overlay click
    document.querySelectorAll('.modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) closeModals();
      });
    });

    // Init
    if (checkAuth()) {
      loadUser();
      loadDashboard();
    }
  </script>
</body>
</html>
