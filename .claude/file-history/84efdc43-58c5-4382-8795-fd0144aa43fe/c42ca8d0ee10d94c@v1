<body>
  <nav class="nav">
    <div class="logo-container">
      <div class="logo-icon">
        <svg viewBox="0 0 24 24">
          <path d="M4 12c5 0 4-8 10-8 0 3 6 3 6 8s-6 5-6 8c-6 0-5-8-10-8Z"/>
        </svg>
      </div>
      <span class="logo-text">nextmavens</span>
    </div>
    <div class="user-menu">
      <span class="user-name" id="user-name">Loading...</span>
      <button class="btn-logout" onclick="logout()">Logout</button>
    </div>
  </nav>

  <div class="container">
    <div class="header">
      <h1>My Projects</h1>
      <button class="btn-primary" onclick="openCreateModal()">+ New Project</button>
    </div>

    <div id="projects-container" class="projects-grid"></div>
  </div>

  <!-- Create Project Modal -->
  <div class="modal-overlay" id="create-modal">
    <div class="modal">
      <h2>Create New Project</h2>
      <div id="create-error" class="error-message hidden"></div>
      <form onsubmit="handleCreateProject(event)">
        <div class="form-group">
          <label>Project Name</label>
          <input type="text" id="project-name" required placeholder="my-awesome-app">
          <div class="form-hint">Only lowercase letters, numbers, and hyphens</div>
        </div>
        <div class="modal-buttons">
          <button type="button" class="btn-secondary" onclick="closeModals()">Cancel</button>
          <button type="submit" class="btn-primary">Create Project</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Project Detail Modal -->
  <div class="modal-overlay" id="detail-modal">
    <div class="modal detail-modal">
      <h2 id="detail-title">Project</h2>
      <div id="detail-content"></div>
      <div class="modal-buttons">
        <button type="button" class="btn-secondary" onclick="closeModals()">Close</button>
      </div>
    </div>
  </div>

  <script>
    const API_BASE = window.location.origin;
    let currentProject = null;

    // Check auth
    function checkAuth() {
      const token = localStorage.getItem('token');
      if (!token) {
        window.location.href = '/';
        return false;
      }
      return true;
    }

    // Load user
    function loadUser() {
      const user = JSON.parse(localStorage.getItem('user') || '{}');
      document.getElementById('user-name').textContent = user.name || 'Developer';
    }

    // Load projects
    async function loadProjects() {
      const token = localStorage.getItem('token');
      const container = document.getElementById('projects-container');

      try {
        const res = await fetch(`${API_BASE}/api/projects`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        const data = await res.json();

        if (!res.ok) {
          throw new Error(data.error || 'Failed to load projects');
        }

        if (data.projects && data.projects.length > 0) {
          container.innerHTML = data.projects.map(p => `
            <div class="project-card">
              <div class="project-name">${escapeHtml(p.project_name)}</div>
              <div class="project-meta">
                Created: ${new Date(p.created_at).toLocaleDateString()}
              </div>
              <div class="project-actions">
                <button class="btn-view" onclick="viewProject('${p.id}')">View Details</button>
              </div>
            </div>
          `).join('');
        } else {
          container.innerHTML = `
            <div class="empty-state" style="grid-column: 1 / -1;">
              <h3>No projects yet</h3>
              <p>Create your first project to get started</p>
              <button class="btn-primary" onclick="openCreateModal()">+ Create Project</button>
            </div>
          `;
        }
      } catch (err) {
        container.innerHTML = `
          <div class="empty-state" style="grid-column: 1 / -1;">
            <p style="color: #dc2626;">${escapeHtml(err.message)}</p>
          </div>
        `;
      }
    }

    // Open create modal
    function openCreateModal() {
      document.getElementById('project-name').value = '';
      document.getElementById('create-error').classList.add('hidden');
      document.getElementById('create-modal').classList.add('active');
    }

    // Handle create project
    async function handleCreateProject(e) {
      e.preventDefault();
      const projectName = document.getElementById('project-name').value;
      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/projects`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ project_name: projectName })
        });

        const data = await res.json();

        if (!res.ok) {
          throw new Error(data.error || 'Failed to create project');
        }

        currentProject = data;
        closeModals();
        showProjectDetails(data);
        loadProjects();
      } catch (err) {
        const errorEl = document.getElementById('create-error');
        errorEl.textContent = err.message;
        errorEl.classList.remove('hidden');
      }
    }

    // View project
    async function viewProject(projectId) {
      const token = localStorage.getItem('token');

      try {
        const res = await fetch(`${API_BASE}/api/projects/${projectId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        const data = await res.json();

        if (!res.ok) {
          throw new Error(data.error || 'Failed to load project');
        }

        showProjectDetails(data);
      } catch (err) {
        alert(err.message);
      }
    }

    // Show project details
    function showProjectDetails(project) {
      document.getElementById('detail-title').textContent = project.project_name;

      if (project.api_keys) {
        document.getElementById('detail-content').innerHTML = `
          <div class="warning-box">
            <strong>Save your API keys now!</strong> You won't be able to see the secret key again after closing this modal.
          </div>

          <div class="api-key-section">
            <h4>Public Key (Client-side)</h4>
            <div class="api-key-box">
              <code id="public-key">${escapeHtml(project.api_keys.public_key)}</code>
              <button class="btn-copy" onclick="copyToClipboard('public-key')">Copy</button>
            </div>
          </div>

          <div class="api-key-section">
            <h4>Secret Key (Server-side)</h4>
            <div class="api-key-box">
              <code id="secret-key">${escapeHtml(project.api_keys.secret_key)}</code>
              <button class="btn-copy" onclick="copyToClipboard('secret-key')">Copy</button>
            </div>
          </div>

          <h4>API Endpoints</h4>
          <div class="endpoints-grid">
            <div class="endpoint-item">
              <label>Gateway</label>
              <code>${escapeHtml(project.endpoints.gateway)}</code>
            </div>
            <div class="endpoint-item">
              <label>Auth</label>
              <code>${escapeHtml(project.endpoints.auth)}</code>
            </div>
            <div class="endpoint-item">
              <label>GraphQL</label>
              <code>${escapeHtml(project.endpoints.graphql)}</code>
            </div>
            <div class="endpoint-item">
              <label>REST API</label>
              <code>${escapeHtml(project.endpoints.rest)}</code>
            </div>
            <div class="endpoint-item">
              <label>Realtime</label>
              <code>${escapeHtml(project.endpoints.realtime)}</code>
            </div>
            <div class="endpoint-item">
              <label>Storage</label>
              <code>${escapeHtml(project.endpoints.storage)}</code>
            </div>
          </div>
        `;
      } else {
        document.getElementById('detail-content').innerHTML = `
          <div class="api-key-section">
            <h4>Project ID</h4>
            <div class="api-key-box"><code>${escapeHtml(project.id)}</code></div>
          </div>
          <div class="api-key-section">
            <h4>Tenant ID</h4>
            <div class="api-key-box"><code>${escapeHtml(project.tenant_id)}</code></div>
          </div>
          <div class="api-key-section">
            <h4>Created</h4>
            <p>${new Date(project.created_at).toLocaleString()}</p>
          </div>
        `;
      }

      document.getElementById('detail-modal').classList.add('active');
    }

    // Copy to clipboard
    function copyToClipboard(elementId) {
      const text = document.getElementById(elementId).textContent;
      navigator.clipboard.writeText(text).then(() => {
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = 'Copied!';
        setTimeout(() => btn.textContent = originalText, 2000);
      });
    }

    // Close modals
    function closeModals() {
      document.querySelectorAll('.modal-overlay').forEach(el => el.classList.remove('active'));
    }

    // Logout
    function logout() {
      localStorage.removeItem('token');
      localStorage.removeItem('user');
      window.location.href = '/';
    }

    // Escape HTML
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Close modal on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModals();
    });

    // Close modal on overlay click
    document.querySelectorAll('.modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) closeModals();
      });
    });

    // Init
    if (checkAuth()) {
      loadUser();
      loadProjects();
    }
  </script>
</body>
</html>
