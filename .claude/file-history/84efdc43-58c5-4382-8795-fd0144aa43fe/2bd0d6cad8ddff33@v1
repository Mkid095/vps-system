<body>
  <div class="container">
    <div class="header">
      <div class="logo">NextMavens</div>
      <nav class="nav">
        <a href="#" onclick="showPage('home')">Home</a>
        <a href="#" onclick="showPage('docs')">Docs</a>
      </nav>
    </div>

    <!-- Auth Page -->
    <div id="auth-page" class="card">
      <div class="tabs">
        <button class="tab active" onclick="showAuthTab('login')">Login</button>
        <button class="tab" onclick="showAuthTab('signup')">Sign Up</button>
      </div>

      <div id="login-form">
        <h2>Welcome Back</h2>
        <form onsubmit="handleLogin(event)">
          <div class="form-group">
            <label>Email</label>
            <input type="email" id="login-email" required>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" id="login-password" required>
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>

      <div id="signup-form" class="hidden">
        <h2>Create Account</h2>
        <form onsubmit="handleSignup(event)">
          <div class="form-group">
            <label>Name</label>
            <input type="text" id="signup-name" required>
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" id="signup-email" required>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" id="signup-password" required minlength="8">
          </div>
          <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
      </div>
    </div>

    <!-- Dashboard Page -->
    <div id="dashboard-page" class="hidden">
      <div class="card">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
          <h2>My Projects</h2>
          <button class="btn btn-primary" onclick="showCreateProject()">+ New Project</button>
        </div>
        <div id="projects-list"></div>
      </div>
    </div>

    <!-- Create Project Page -->
    <div id="create-project-page" class="hidden">
      <div class="card">
        <h2>Create New Project</h2>
        <form onsubmit="handleCreateProject(event)">
          <div class="form-group">
            <label>Project Name</label>
            <input type="text" id="project-name" required placeholder="my-awesome-app">
          </div>
          <button type="submit" class="btn btn-primary">Create Project</button>
          <button type="button" class="btn btn-secondary" onclick="showPage('dashboard')">Cancel</button>
        </form>
      </div>
    </div>

    <!-- Project Details Page -->
    <div id="project-details-page" class="hidden">
      <div class="card">
        <button class="btn btn-secondary" onclick="showPage('dashboard')" style="margin-bottom: 20px;">‚Üê Back</button>
        <h2 id="project-title">Project</h2>
        <div id="project-details-content"></div>
      </div>
    </div>

    <!-- Home Page -->
    <div id="home-page" class="hidden">
      <div class="card" style="text-align: center; padding: 60px 30px;">
        <h1 style="font-size: 48px; margin-bottom: 20px; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">NextMavens</h1>
        <p style="font-size: 20px; color: rgba(255,255,255,0.7); margin-bottom: 40px;">Build powerful applications with real-time database, authentication, and storage.</p>
        <button class="btn btn-primary" onclick="showPage('auth')">Get Started</button>
      </div>

      <div class="card">
        <h2>Features</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-top: 20px;">
          <div>
            <h3>üîê Authentication</h3>
            <p style="color: rgba(255,255,255,0.7);">Secure user authentication with JWT tokens</p>
          </div>
          <div>
            <h3>üóÑÔ∏è Database</h3>
            <p style="color: rgba(255,255,255,0.7);">PostgreSQL with auto-generated REST & GraphQL APIs</p>
          </div>
          <div>
            <h3>‚ö° Realtime</h3>
            <p style="color: rgba(255,255,255,0.7);">Live database updates via WebSocket</p>
          </div>
          <div>
            <h3>üìÅ Storage</h3>
            <p style="color: rgba(255,255,255,0.7);">File storage via Telegram integration</p>
          </div>
        </div>
      </div>
