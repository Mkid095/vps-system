# NextMavens Self-Hosted Supabase
# Version-pinned for stability - update monthly
networks:
  supabase-network:
    driver: bridge
    name: supabase-network

volumes:
  supabase-db-data:
    name: supabase-db-data
  supabase-storage:
    name: supabase-storage

services:
  # PostgreSQL Database (Master DB + Project DBs)
  db:
    image: pgvector/pgvector:pg16
    container_name: supabase-db
    hostname: db
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
      POSTGRES_DB: postgres
    volumes:
      - supabase-db-data:/var/lib/postgresql/data
      - ./scripts/db-init.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - supabase-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -h localhost"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Supabase Studio (Admin UI)
  studio:
    image: supabase/studio:20250115-7a7e3d3
    container_name: supabase-studio
    ports:
      - "8000:3000"
    environment:
      STUDIO_PG_META_URL: http://meta:8080
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
      DEFAULT_ORGANIZATION_NAME: NextMavens
      DEFAULT_PROJECT_NAME: Master
    networks:
      - supabase-network
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy

  # Supavisor (Connection Pooling)
  supavisor:
    image: supabase/supavisor:1.1.51
    container_name: supabase-supavisor
    ports:
      - "4000:4000"
    environment:
      PORT: 4000
      DB_HOST: db
      DB_PORT: 5432
      DB_USER: postgres
      DB_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
      DB_NAME: postgres
      POOL_MODE: transaction
      POOLER_DEFAULT_POOL_SIZE: 15
      POOLER_MAX_CLIENT_CONN: 100
      TENANT_ID: nextmavens_master
      SECRET_KEY_BASE: ${SUPAVISOR_SECRET_KEY:-change-me-in-production}
      API_JWT_SECRET: ${JWT_SECRET:-change-me-in-production}
    networks:
      - supabase-network
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy

  # pg-meta (Database introspection for Studio)
  meta:
    image: supabase/pg-meta:v0.79.0
    container_name: supabase-meta
    environment:
      PG_META_PORT: 8080
      PG_META_DB_HOST: db
      PG_META_DB_PORT: 5432
      PG_META_DB_NAME: postgres
      PG_META_DB_USER: postgres
      PG_META_DB_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
    networks:
      - supabase-network
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy

  # Realtime (WebSocket subscriptions)
  realtime:
    image: supabase/realtime:v2.31.4
    container_name: supabase-realtime
    ports:
      - "4001:4000"
    environment:
      PORT: 4000
      DB_HOST: db
      DB_PORT: 5432
      DB_USER: postgres
      DB_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
      DB_NAME: postgres
      DB_AFTER_CONNECT_QUERY: 'SET search_path TO _realtime'
      API_JWT_SECRET: ${JWT_SECRET:-change-me-in-production}
      SECRET_KEY_BASE: ${REALTIME_SECRET_KEY:-change-me-in-production}
    networks:
      - supabase-network
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy

  # Storage API
  storage:
    image: supabase/storage-api:v1.14.2
    container_name: supabase-storage
    ports:
      - "4002:5000"
    environment:
      ANON_KEY: ${ANON_KEY:-eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.anon}
      SERVICE_KEY: ${SERVICE_KEY:-eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.service}
      POSTGREST_URL: http://rest:3000
      DATABASE_URL: postgres://postgres:${POSTGRES_PASSWORD:-postgres}@db:5432/postgres
      FILE_SIZE_LIMIT: 52428800
      STORAGE_BACKEND: file
      FILE_STORAGE_BACKEND_PATH: /var/lib/storage
      TENANT_ID: stub
      REGION: stub
      GLOBAL_S3_BUCKET: stub
    volumes:
      - supabase-storage:/var/lib/storage
    networks:
      - supabase-network
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy

  # PostgREST (REST API)
  rest:
    image: postgrest/postgrest:v12.2.0
    container_name: supabase-rest
    ports:
      - "4003:3000"
    environment:
      PGRST_DB_URI: postgres://postgres:${POSTGRES_PASSWORD:-postgres}@db:5432/postgres
      PGRST_DB_SCHEMAS: public
      PGRST_DB_ANON_ROLE: anon
      PGRST_JWT_SECRET: ${JWT_SECRET:-change-me-in-production}
      PGRST_SERVER_TRACE_ENABLED: false
    networks:
      - supabase-network
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy

  # Kong API Gateway
  kong:
    image: kong:3.7.1
    container_name: supabase-kong
    ports:
      - "8001:8001"
      - "8443:8443"
    environment:
      KONG_DATABASE: "off"
      KONG_PROXY_ACCESS_LOG: /dev/stdout
      KONG_ADMIN_ACCESS_LOG: /dev/stdout
      KONG_PROXY_ERROR_LOG: /dev/stderr
      KONG_ADMIN_ERROR_LOG: /dev/stderr
      KONG_LOG_LEVEL: warn
      KONG_PLUGINS: session,rate-limiting
    networks:
      - supabase-network
    restart: unless-stopped
