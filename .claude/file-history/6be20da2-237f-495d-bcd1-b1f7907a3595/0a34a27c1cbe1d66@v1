# NextMavens Platform - nextmavens.cloud
# Main domain configuration

# Upstream for Next.js Dashboard (port 3000)
upstream nextmavens_dashboard {
    server 127.0.0.1:3000;
    keepalive 64;
}

# Upstream for Supabase Studio (port 8000)
upstream supabase_studio {
    server 127.0.0.1:8000;
    keepalive 64;
}

# Upstream for Supabase API (PostgREST port 4003)
upstream supabase_api {
    server 127.0.0.1:4003;
    keepalive 64;
}

# Upstream for Evolution API (port 8080)
upstream evolution_api {
    server 127.0.0.1:8080;
    keepalive 64;
}

# Upstream for Supabase Realtime (port 4001)
upstream supabase_realtime {
    server 127.0.0.1:4001;
    keepalive 64;
}

server {
    listen 80;
    listen [::]:80;
    server_name nextmavens.cloud www.nextmavens.cloud;

    # Redirect HTTP to HTTPS (will be enabled after SSL)
    # return 301 https://$server_name$request_uri;

    # Logging
    access_log /var/log/nginx/nextmavens-access.log;
    error_log /var/log/nginx/nextmavens-error.log;

    # Maximum upload size
    client_max_body_size 100M;

    # Main dashboard
    location / {
        proxy_pass http://nextmavens_dashboard;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Supabase Studio
    location /studio {
        proxy_pass http://supabase_studio;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Supabase API
    location /api/ {
        proxy_pass http://supabase_api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Evolution API (WhatsApp)
    location /whatsapp {
        proxy_pass http://evolution_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
    }

    # Supabase Realtime (WebSockets)
    location /realtime {
        proxy_pass http://supabase_realtime;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400;
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}
