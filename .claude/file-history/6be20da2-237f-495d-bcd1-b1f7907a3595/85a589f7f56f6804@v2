# Evolution API - WhatsApp Integration v2.3.7
# Multi-instance support for NextMavens Platform
networks:
  evolution-network:
    driver: bridge
    name: evolution-network
  supabase-network:
    external: true

volumes:
  evolution-data:
    name: evolution-data
  evolution-db-data:
    name: evolution-db-data

services:
  # PostgreSQL database for Evolution API
  evolution-db:
    image: postgres:15-alpine
    container_name: evolution-db
    environment:
      POSTGRES_USER: evolution
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
      POSTGRES_DB: evolution
    volumes:
      - evolution-db-data:/var/lib/postgresql/data
    networks:
      - evolution-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U evolution -h localhost"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Evolution API v2.3.7 (pinned for stability)
  evolution:
    image: evoapicloud/evolution-api:v2.3.7
    container_name: evolution-api
    ports:
      - "8080:8080"
    environment:
      # Server Configuration
      SERVER_PORT: 8080
      SERVER_URL: https://nextmavens.cloud

      # Authentication
      API_KEY: ${EVOLUTION_API_KEY:-your-api-key-here}
      AUTHENTICATION_API_KEY: true
      AUTHENTICATION_TYPE: apikey

      # Database (PostgreSQL - required for v2)
      DATABASE_ENABLED: true
      DATABASE_PROVIDER: postgresql
      DATABASE_CONNECTION_URI: postgresql://evolution:${POSTGRES_PASSWORD:-postgres}@evolution-db:5432/evolution?schema=public
      DATABASE_CONNECTION_CLIENT_NAME: evolution_exchange
      DATABASE_SAVE_DATA_INSTANCE: true
      DATABASE_SAVE_DATA_NEW_MESSAGE: true
      DATABASE_SAVE_MESSAGE_UPDATE: true
      DATABASE_SAVE_DATA_CONTACTS: true
      DATABASE_SAVE_DATA_CHATS: true
      DATABASE_SAVE_DATA_LABELS: true
      DATABASE_SAVE_DATA_HISTORIC: true

      # Redis (for caching - optional)
      REDIS_ENABLED: true
      REDIS_URI: redis://redis:6379
      REDIS_PREFIX: evolution

      # Instance Configuration
      STORE_SESSION: true
      STORE_MESSAGE: true
      STORE_CHATS: true
      STORE_CONTACTS: true

      # Webhook Configuration
      WEBHOOK_ENABLED: true
      WEBHOOK_GLOBAL_URL: ${EVOLUTION_WEBHOOK_URL:-https://nextmavens.cloud/api/webhooks/whatsapp}
      WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS: true
      WEBHOOK_GLOBAL_EVENTS: |
        MESSAGES_UPDATE
        MESSAGES_UPSERT
        SEND_MESSAGE
        CONNECTION_UPDATE
        STATUS_INSTANCE

      # WhatsApp Configuration
      WA_BUSINESS_TOKEN: ${WA_BUSINESS_TOKEN:-}

      # S3 Storage (optional, for media files)
      S3_ENABLED: false

      # Cleanup (keep for 30 days)
      CLEANUP_DAYS: 30
      CLEANUP_SCHEDULE: 0 0 * * *

    volumes:
      - evolution-data:/evolution/store
    networks:
      - evolution-network
    restart: unless-stopped
    depends_on:
      evolution-db:
        condition: service_healthy
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:8080"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  # Redis for Evolution API session storage
  redis:
    image: redis:7-alpine
    container_name: evolution-redis
    ports:
      - "6379:6379"
    command: redis-server --appendonly yes --maxmemory 256mb --maxmemory-policy allkeys-lru
    volumes:
      - evolution-data:/data
    networks:
      - evolution-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
